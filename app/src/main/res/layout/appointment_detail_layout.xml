<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.doctor.AppointmentDetailFragment">

    <TextView
        android:id="@+id/textView3"
        style="@style/titleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/appointment_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageAppointmentDialog"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:srcCompat="@drawable/patient" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAppointmentDialog">


        <TextView
            android:id="@+id/textAppointmentPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_person_24"
            android:drawablePadding="16dp"
            android:paddingVertical="8dp"
            android:text="Patient Samit" />

        <TextView
            android:id="@+id/textAppointmentPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_local_phone_24"
            android:drawablePadding="16dp"
            android:paddingVertical="8dp"
            android:text="@string/phone_preview" />

        <TextView
            android:id="@+id/textAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_calendar_today_24"
            android:drawablePadding="16dp"
            android:paddingVertical="8dp"
            android:text="July 06, 2021" />

        <TextView
            android:id="@+id/textAppointmentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_round_access_time_24"
            android:drawablePadding="16dp"
            android:paddingVertical="8dp"
            android:text="9:30" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>